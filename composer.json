{
    "name": "dugajean/wp-hook-annotations",
    "description": "Use PHP Docblock (annotations) to register WordPress hooks, filters and shortcodes.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Dukagjin Surdulli",
            "email": "me@dukagj.in"
        }
    ],
    "require": {
        "php": "~7.1",
        "doctrine/annotations": "^1.6"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "WpHookAnnotations\\": "src/"
        },
        "files": [
            "src/Helpers/Utils.php",
            "src/Helpers/RegisterAnnotations.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WpHookAnnotations\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
